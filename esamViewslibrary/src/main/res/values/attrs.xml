<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Popular attributes-->
    <attr name="es_fontFace" format="enum">
        <enum name="android_default_font" value="0" />
        <enum name="iransans_ultra_light" value="1" />
        <enum name="iran_sans_light" value="2" />
        <enum name="iransans_medium" value="3" />
    </attr>
    <attr name="es_textFormat" format="enum">
        <enum name="normal" value="0" />
        <enum name="currency" value="1" />
        <enum name="card_number" value="2" />
    </attr>
    <attr name="es_title" format="string" />
    <attr name="es_placeholder" format="integer" />
    <attr name="es_error_placeholder" format="integer" />



    <declare-styleable name="EsTextView">
        <attr name="es_fontFace" />
        <attr name="es_textFormat" />
    </declare-styleable>

    <declare-styleable name="EsEditText">
        <attr name="es_fontFace" />
        <attr name="es_textFormat" />
    </declare-styleable>
    
    <declare-styleable name="EsImageView">
        <attr name="es_placeholder" />
        <attr name="es_error_placeholder"/>
    </declare-styleable>

    <declare-styleable name="EsCircleImageView">
        <attr name="es_placeholder" />
        <attr name="es_error_placeholder"/>
    </declare-styleable>

    <declare-styleable name="EsButton">
        <attr name="android:padding" />
        <attr name="es_fontFace" />
        <attr name="es_rippleColor" format="color" />
        <attr name="es_firstColor" format="color" />
        <attr name="es_secondColor" format="color" />
        <attr name="es_cornerRadius" format="integer" />
        <attr name="es_pressColor" format="color" />
    </declare-styleable>

    <declare-styleable name="EsToolbar">
        <attr name="es_left_icon1" format="integer" />
        <attr name="es_left_icon2" format="integer" />
        <attr name="es_left_icon3" format="integer" />
        <attr name="es_logo" format="integer" />
        <attr name="es_right_icon" format="integer" />
    </declare-styleable>

    <declare-styleable name="EsProductsSlider">
        <attr name="es_title" />
    </declare-styleable>

    <declare-styleable name="EsChipsList">
        <attr name="es_itemMargin" format="dimension" />
    </declare-styleable>

</resources>