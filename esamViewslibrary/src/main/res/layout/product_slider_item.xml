<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/prudcut_slider_bg"
            android:minHeight="210dp"
            android:padding="5dp">

            <ir.esam.esamlibrary.EsImageView
                android:id="@+id/img_product"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <ir.esam.esamlibrary.EsTextView
                android:id="@+id/txt_title"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="نام کالا"/>

            <ir.esam.esamlibrary.EsTextView
                android:id="@+id/txt_price"
                android:textSize="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="#4c7df1"
                app:es_textFormat="currency"
                app:es_fontFace="iransans_medium"
                android:layout_height="wrap_content"
                android:text="500 تومان"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>