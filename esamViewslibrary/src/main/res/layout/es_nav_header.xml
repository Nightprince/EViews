<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:gravity="right"
    android:background="#1e3749"
    android:paddingTop="20dp">

    <ir.esam.esamlibrary.EsCircleImageView
        android:id="@+id/img_logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_account_circle" />

    <LinearLayout
        android:id="@+id/lne_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:gravity="right">

        <ir.esam.esamlibrary.EsButton
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:es_firstColor="#00ffffff"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:textColor="#fff"
            android:text="ثبت نام"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#a6a5a5"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"/>

        <ir.esam.esamlibrary.EsButton
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:es_firstColor="#00ffffff"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:textColor="#fff"
            android:text="ورود"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lne_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:gravity="right|center_vertical">

        <ir.esam.esamlibrary.EsImageView
            android:id="@+id/img_arrow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_arrow_drop_down"/>

        <ir.esam.esamlibrary.EsTextView
            android:id="@+id/txt_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            android:text="محمد حسین امینی"/>

        <ir.esam.esamlibrary.EsImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_person"/>
    </LinearLayout>

</LinearLayout>